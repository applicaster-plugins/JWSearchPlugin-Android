<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CopaAmerica" parent="@style/Theme.AppCompat.Light.NoActionBar"/>
    <!-- used for titles like groups and matches -->
    <style name="Theme.CopaAmerica.Title">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <!-- used for subtitles like the date and the location -->
    <style name="Theme.CopaAmerica.Subtitle">
        <item name="customtypeface">bebasneue-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_subtitle</item>
    </style>

    <!-- used for the name of the country -->
    <style name="Theme.CopaAmerica.Country">
        <item name="customtypeface">bebasneue-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <!-- used for points -->
    <style name="Theme.CopaAmerica.Points">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <!-- used for scores in a match-->
    <style name="Theme.CopaAmerica.Score">
        <item name="customtypeface">bebasneue-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <!-- used for game state (i.e.: first half, second half, etc) -->
    <style name="Theme.CopaAmerica.GameState">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <!-- used for match time -->
    <style name="Theme.CopaAmerica.Time">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <!-- used for player details titles  -->
    <style name="Theme.CopaAmerica.DetailsTitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- used for titles like groups and matches -->
    <style name="Theme.CopaAmerica.BigTitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="Theme.CopaAmerica.ThinTitle">
        <item name="customtypeface">bebasneue-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <!-- used for player details -->
    <style name="Theme.CopaAmerica.Details">
        <item name="customtypeface">bebasneue-regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <style name="Theme.CopaAmerica.DetailsBold">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/faded_black</item>
    </style>

    <style name="Theme.CopaAmerica.HighlightTitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">82sp</item>
        <item name="android:textColor">@color/title_highlight</item>
    </style>

    <style name="Theme.CopaAmerica.HighlightSmallTitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_highlight</item>
    </style>

    <style name="Theme.CopaAmerica.BoldSubtitle">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_subtitle</item>
    </style>

    <style name="Theme.CopaAmerica.NumberHighlight">
        <item name="customtypeface">bebasneue-bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">80sp</item>
        <item name="android:textColor">@color/text_highlight_number</item>
    </style>
</resources>